@model ClinicManagementSystem.Models.Appointment
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Tạo lịch hẹn mới";
}

<h2>Lịch hẹn mới</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ScheduledAt" class="control-label">Chọn ngày/giờ</label>
                <input asp-for="ScheduledAt" class="form-control" type="datetime-local" />
                <span asp-validation-for="ScheduledAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PatientId" class="control-label">Tên bệnh nhân</label>
                <select asp-for="PatientId" class="form-control" asp-items="ViewBag.PatientId">
                    <option value="">-- Chọn bệnh nhân --</option>
                </select>
                <span asp-validation-for="PatientId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reason" class="control-label">Lý do</label>
                <input asp-for="Reason" class="form-control" />
                <span asp-validation-for="Reason" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Tạo lịch</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Quay về danh sách lịch khám</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
